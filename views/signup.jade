extends layout
block content

    body

    .row
        .col-md-offset-3(class='col.lg-6')

            title Signup
            link(href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7", crossorigin="anonymous")

            h1 Create a new account

    .row
        .col-md-offset-3(class='col.lg-6')
            .form-group
            form.form-group(action='/signup' method='post')

                h2.form-signin-heading Signup

                label.sr-only(for='inputName') Name:
                input#inputName.form-group(type='name' name='username' placeholder='Name' required='' autofocus='')
                br

                label.sr-only(for='inputEmail') Email address
                input#inputEmail.form-group(type='email' name='email' placeholder='Email address' required='' autofocus='')
                br
                label.sr-only(for='inputPassword') Password
                input#inputPassword.form-group(type='password' name='password' placeholder='Password' required='')

                .checkbox
                    label
                        input(type='checkbox', value='remember-me')
                        |  Remember me
                button.btn.btn-success(type='submit' name='signup') Submit
                br
                | <p>If you already have an account then you can <a href="/login">log in here</a></p>